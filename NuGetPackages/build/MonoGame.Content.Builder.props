<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project=".\PackageVersion.props" />
  
  <Choose>
    <When Condition=" '$(OS)' == 'Windows_NT' ">
      <ItemGroup>
        <PackageReference Include="HollowGames.Content.Builder.Windows" Version="$(PackageVersion)">
          <PrivateAssets>all</PrivateAssets>
        </PackageReference>
      </ItemGroup>
    </When>
    <When Condition=" '$(OS)' == 'OSX' ">
      <ItemGroup>
        <PackageReference Include="HollowGames.Content.Builder.MacOS" Version="$(PackageVersion)">
          <PrivateAssets>all</PrivateAssets>
        </PackageReference>
      </ItemGroup>
    </When>
    <Otherwise>
      <ItemGroup>
        <PackageReference Include="HollowGames.Content.Builder.Linux" Version="$(PackageVersion)">
          <PrivateAssets>all</PrivateAssets>
        </PackageReference>
      </ItemGroup>
    </Otherwise>
  </Choose>
</Project>
